#!/bin/sh
commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Regex to check for "XX-" at start
if ! echo "$commit_msg" | grep -qE "^[0-9]{2}-"; then
  echo "Error: Commit message must start with a two-digit number and dash (e.g., '03- Description')"
  echo "Current message: $commit_msg"
  exit 1
fi
